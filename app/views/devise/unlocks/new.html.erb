<h2>Resend unlock instructions</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label resource.class.authentication_keys.first %><br />
    <% if authentication_key.to_sym == :email %>
      <%= f.email_field resource.authentication_keys.first, autofocus: true %>
    <% else %>
      <%= f.text_field resource.authentication_keys.first, autofocus: true %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Resend unlock instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
